# =============================================================================
# BStock Production Environment Configuration
# Domain: bstock.ashreef.com
# =============================================================================
# Copy this file to .env for production deployment
# Update all placeholder values before deployment!

# =============================================================================
# Database Configuration (PostgreSQL container)
# =============================================================================
POSTGRES_USER=bstock_user
POSTGRES_PASSWORD=CHANGE_THIS_SECURE_DB_PASSWORD_123!
POSTGRES_DB=stock_db

# =============================================================================
# Backend Application Configuration
# =============================================================================
# CRITICAL: Generate a secure secret key for production!
# You can generate one with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE_THIS_TO_A_SECURE_SECRET_KEY_FOR_PRODUCTION

# Environment mode
ENVIRONMENT=production

# Disable API documentation in production for security
DISABLE_OPENAPI=true

# =============================================================================
# Domain Configuration (bstock.ashreef.com)
# =============================================================================
# Main domain for the application
DOMAIN=bstock.ashreef.com

# =============================================================================
# CORS Configuration for Production Domain
# =============================================================================
# Production domain with HTTPS (via Cloudflare tunnel)
CORS_ALLOW_ORIGINS=https://bstock.ashreef.com
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
CORS_ALLOW_HEADERS=Content-Type,Authorization,Accept,Origin,User-Agent,X-Forwarded-For,X-Forwarded-Proto

# =============================================================================
# Optional: SSL/TLS Configuration (if using reverse proxy)
# =============================================================================
# Uncomment and configure if using nginx/traefik with SSL
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem

# =============================================================================
# Backup Configuration (optional)
# =============================================================================
# BACKUP_SCHEDULE=0 2 * * * # Daily at 2 AM
# BACKUP_RETENTION_DAYS=30
