# =============================================================================
# Docker Compose Environment Configuration
# =============================================================================
# Copy this file to .env in the project root for docker-compose.yml
# This file configures the docker-compose.yml environment

# =============================================================================
# Database Configuration (PostgreSQL container)
# =============================================================================
POSTGRES_USER=bstock_user
POSTGRES_PASSWORD=your-secure-database-password-here
POSTGRES_DB=stock_db

# =============================================================================
# Backend Application Configuration
# =============================================================================
# CRITICAL: Set a secure secret key for production!
SECRET_KEY=your-super-secret-key-for-production

# Environment mode
ENVIRONMENT=production

# Disable API documentation in production
DISABLE_OPENAPI=true

# =============================================================================
# CORS Configuration for Production
# =============================================================================
# Replace 'my-flutter-app-placeholder' with your actual Vercel app name
CORS_ALLOW_ORIGINS=https://my-flutter-app-placeholder.vercel.app
CORS_ALLOW_CREDENTIALS=false
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
CORS_ALLOW_HEADERS=Content-Type,Authorization,Accept,Origin,User-Agent

# Note: Add multiple Vercel URLs if you have staging/preview deployments:
# CORS_ALLOW_ORIGINS=https://my-flutter-app.vercel.app,https://my-flutter-app-staging.vercel.app
