# =============================================================================
# BstocK Backend Environment Configuration
# =============================================================================
# Copy this file to .env and configure the values for your environment
# DO NOT commit the actual .env file to version control!

# =============================================================================
# Database Configuration
# =============================================================================
# For development (SQLite):
DATABASE_URL=sqlite:///./stock_dev.db

# For production (PostgreSQL example):
# DATABASE_URL=postgresql://username:password@localhost:5432/bstock_db

# For production (MySQL example):
# DATABASE_URL=mysql://username:password@localhost:3306/bstock_db

# =============================================================================
# Security Configuration
# =============================================================================
# CRITICAL: Change this to a secure random string in production!
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-super-secret-key-here

# Master admin account (cannot be deleted or edited)
MASTER_USERNAME=bstock_master
MASTER_PASSWORD=change_me_master

# JWT Algorithm (usually doesn't need to change)
JWT_ALGORITHM=HS256

# Token expiration time in minutes
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# Environment Configuration
# =============================================================================
# Environment: development, staging, production
ENVIRONMENT=development

# =============================================================================
# CORS Configuration
# =============================================================================
# For development (allows localhost on any port):
CORS_ALLOW_ORIGIN_REGEX=http://(localhost|127\.0\.0\.1):\d+

# For production with specific domains (comma-separated list):
# Replace with your actual deployed frontend domain(s)
CORS_ALLOW_ORIGINS=https://bstock.ashreef.com

# Additional CORS settings
CORS_ALLOW_CREDENTIALS=false
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
CORS_ALLOW_HEADERS=Content-Type,Authorization,Accept,Origin,User-Agent

# Note: When deploying to production:
# 1. Update CORS_ALLOW_ORIGINS with your actual Vercel app URL(s)
# 2. You can add multiple URLs separated by commas: https://app.vercel.app,https://app-staging.vercel.app
# 3. Remove or comment out CORS_ALLOW_ORIGIN_REGEX for production
# 4. Set CORS_ALLOW_CREDENTIALS=true if your Flutter app needs to send cookies/auth headers

# =============================================================================
# API Documentation Configuration
# =============================================================================
# Set to true to disable API docs in production
DISABLE_OPENAPI=false

# =============================================================================
# Database Migration Configuration
# =============================================================================
# Set to false in production when using proper migrations
AUTO_CREATE_TABLES=true

# =============================================================================
# Server Configuration
# =============================================================================
# Host to bind to (0.0.0.0 for all interfaces)
HOST=0.0.0.0

# Port to listen on
PORT=8000

# =============================================================================
# Additional Configuration for Different Hosting Platforms
# =============================================================================

# For Railway.app:
# DATABASE_URL will be automatically provided
# PORT will be automatically provided

# For Heroku:
# DATABASE_URL will be automatically provided  
# PORT will be automatically provided

# For DigitalOcean App Platform:
# DATABASE_URL will be automatically provided
# PORT will be automatically provided

# For AWS/Google Cloud/Azure:
# Configure DATABASE_URL with your managed database connection string
# Set appropriate HOST and PORT values

# =============================================================================
# Example Production Values
# =============================================================================
# ENVIRONMENT=production
# SECRET_KEY=your-actual-super-secret-production-key
# DATABASE_URL=postgresql://user:pass@prod-db-host:5432/bstock_prod
# DISABLE_OPENAPI=true
# AUTO_CREATE_TABLES=false
# CORS_ALLOW_ORIGIN_REGEX=https://your-domain\.com
